<wsdl:definitions name='RegisterExtendedBlockInteraction'
	xmlns:wsdl='http://schemas.xmlsoap.org/wsdl/'
	xmlns:soap='http://schemas.xmlsoap.org/wsdl/soap/'
	xmlns:xs='http://www.w3.org/2001/XMLSchema'
	xmlns:tjsr='urn:riv:ehr:blocking:administration:RegisterExtendedBlockResponder:2'
	xmlns:itr='urn:riv:itintegration:registry:1'
	xmlns:tns='urn:riv:ehr:blocking:administration:RegisterExtendedBlock:2:rivtabp21'
	targetNamespace='urn:riv:ehr:blocking:administration:RegisterExtendedBlock:2:rivtabp21'>

	<wsdl:documentation xml:lang='sv'>
		 Tjänsteinteraktionens namn: RegisterExtendedBlock
		 Beskrivning: 
		   Tjänst som registrerar en ny spärr för en viss patient och inom en viss vårdgivare i den lokala spärrtjänsten.
		   En spärr gäller i normal fallet alla informationstyper som rör patienten på en vårdenhet och således spärrar ut all obehörig tillgång till informationen.
		   Informationstyperna lak och upp kan undantas från spärren. Om detta sker blir dessa informationstyper ej spärrade. 
		   Kräver utökad spärrinformation med metainformation kring skapande av spärren.
		   Tjänsten registrerar även grunddata om spärren på nationell nivå.
		   Tjänsten realiseras på lokal nivå.
		 Revisioner: 
		 Tjänstedomän: blocking:administration
		 Tjänsteinteraktionstyp: Fråga-Svar
		 WS-profil: RIVTABP21
		 Förvaltas av: Inera AB
	</wsdl:documentation>
	
	<wsdl:types>
		<xs:schema targetNamespace='urn:riv:ehr:blocking:administration:RegisterExtendedBlock:2:rivtabp21'>
			<xs:import schemaLocation='RegisterExtendedBlockResponder_2.0.xsd' namespace='urn:riv:ehr:blocking:administration:RegisterExtendedBlockResponder:2' />
			<xs:import schemaLocation='../../../core_components/itintegration_registry_1.0.xsd' namespace='urn:riv:itintegration:registry:1' />
		</xs:schema>
	</wsdl:types>
	
		
	<wsdl:message name='RegisterExtendedBlockRequest'>
		<wsdl:part name='LogicalAddress' element='itr:LogicalAddress'>
			<wsdl:documentation xml:lang='sv'>Som logisk adress anges HSA-id för vårdgivaren som spärren gäller för.</wsdl:documentation>
		</wsdl:part>
	
		<wsdl:part name='parameters' element='tjsr:RegisterExtendedBlockRequest' />
	</wsdl:message>

	<wsdl:message name='RegisterExtendedBlockResponse'>
		<wsdl:part name='parameters' element='tjsr:RegisterExtendedBlockResponse' />
	</wsdl:message>

	<wsdl:portType name='RegisterExtendedBlockResponderInterface'>
		<wsdl:operation name='RegisterExtendedBlock'>
			<wsdl:input message='tns:RegisterExtendedBlockRequest' />
			<wsdl:output message='tns:RegisterExtendedBlockResponse' />
		</wsdl:operation>
	</wsdl:portType>

	<wsdl:binding name='RegisterExtendedBlockResponderBinding' type='tns:RegisterExtendedBlockResponderInterface'>
		<soap:binding style='document' transport='http://schemas.xmlsoap.org/soap/http' />
		<wsdl:operation name='RegisterExtendedBlock'>
			<soap:operation soapAction='urn:riv:ehr:blocking:administration:RegisterExtendedBlockResponder:2:RegisterExtendedBlock' style='document' />
			<wsdl:input>
				<soap:header use='literal' message='tns:RegisterExtendedBlockRequest' part='LogicalAddress' />
				<soap:body use='literal' parts='parameters' />
			</wsdl:input>
			<wsdl:output>
				<soap:body use='literal' />
			</wsdl:output>
		</wsdl:operation>
	</wsdl:binding>

	<wsdl:service name='RegisterExtendedBlockResponderService'>
		<wsdl:port name='RegisterExtendedBlockResponderPort' binding='tns:RegisterExtendedBlockResponderBinding'>
			<soap:address location='http://tempuri.org' />
		</wsdl:port>
	</wsdl:service>
</wsdl:definitions>
